{% extends 'base.html.twig' %}

{% block title %}Liste des Sessions{% endblock %}

{% block body %}
    <h1 class="titresecondaire">LISTE DES SESSIONS</h1>

    <div class="addprogsession">
        <a class="bouton" href="">Ajouter une session</a>
    </div>

    <div class="sessionContainer">
        <div class="sessions">
            <div class="tabname">
                <p class="titretabname w20">Intitulé Session</p>
                <div class="pipe"></div>
                <p class="tabnametitre">Date début</p>
                <div class="pipe"></div>
                <p class="tabnametitre">Date fin</p>
                <div class="pipe"></div>
                <p class="tabnametitre">Places théoriques</p>
                <div class="pipe"></div>
                <p class="tabnametitre">Places Réservées</p>
                <div class="pipe"></div>
                <p class="tabnametitre">Places Restantes</p>
                <div class="pipe"></div>
                <p class="tabnametitre">Détail</p>
            </div>

            
            {# Bloc servant de conteneur pour les sessions #}
            <div class="listSessionContainer">
                {% for session in sessions %}
                {# On créé les sessions pour chaque session qu'il y a en base de donnée #}
                <div class="session">
                    <p class="titretabname wnomsession">{{ session }}</p>
                    <div class="pipe"></div>
                    <p class="tabnametitre wddebut">{{ session.dateDebut | date('d/m/Y')}}</p>
                    <div class="pipe"></div>
                    <p class="tabnametitre wdfin">{{ session.dateFin | date('d/m/Y')}} </p>
                    <div class="pipe"></div>
                    <p class="tabnametitre wptheorique">{{ session.placeTheorique }}</p>
                    <div class="pipe"></div>
                    <p class="tabnametitre wpreservee">{{ session.placeReserve }}</p>
                    <div class="pipe"></div>
                    <p class="tabnametitre wprestante">{{ session.placeTheorique - session.placeReserve }}</p>
                    <div class="pipe"></div>
                    <a class="wdetail" href="{{ path('detail_session', {'id':session.getId }) }}">
                        <div class="option">
                            <div>
                                <div class="barrehorizontale"></div>
                                <div class="barrehorizontale"></div>
                                <div class="barrehorizontale"></div>
                            </div>
                        </div>
                    </a>
                </div>

            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}