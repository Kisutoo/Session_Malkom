{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="titre">
            <h1 class="titresecondaire">SE CONNECTER</h1>
        </div>
        
        <div class="logincontainer">
            <div class="login">
                <label for="username">Email</label>
                <input class="label" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <label for="password">Password</label>
                <input class="label" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                <input  type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                <a class="logintext" href="{{ path('app_register')}}"><small>Vous n'avez pas de compte ?</small></a>
                <a class="logintext" href="#"><small>Mot de passe oubli√©</small></a>
                
                <button class="bouton" type="submit">
                    Sign in
                </button>
            </div>
        </div>
        
        

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        
    </form>
{% endblock %}
